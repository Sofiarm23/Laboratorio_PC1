@{
    ViewData["Title"] = "Solicitud de Bono";
}
<h1>@ViewData["Title"]</h1>

<body>
    <div class="container">

  
        <div class="form-group">
            <label for="n">Nombre:</label>
            <input type="text" name="nombre" id="n" required class="form-control">
        </div>
          <div>
            <label for="ape">Apellido:</label>
            <input type="text" name="apellido" id="ape" required class="form-control">
        </div>     
        <div>
            <label for="d">Distrito:</label>
            <input type="text" name="distrito" id="d" required class="form-control">
        </div>
        
        <div class="form-group">
            Banco:
            <select name="banco" id="cbo" class="form-control">
                <option value="1">Banco del comercio</option>
                <option value="2">Interbank</option>
                <option value="3">Banco de credito del Perú</option>
                <option value="4">Banco Interamericano de Finanzas</option>
                <option value="5">MiBanco</option>
            </select>
        </div>
        <div>
            <label for="e">Edad:</label>
            <input type="text" name="edad" id="e" required class="form-control">
        </div>
        <div class="form-group">
            Género:
            <label for="F"><input type="radio" name="genero" value="F"> Femenino</label>
            <label for="M"><input type="radio" name="genero" value="M"> Masculino</label>
        </div>
        
        <button class="btn btn-primary">Enviar solicitud</button>
    

    </div>
</body>
